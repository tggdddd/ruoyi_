<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.iocoder.yudao.module.system.dal.mysql.home.ChickenSoupMapper">

    <select id="getRandomContent" resultType="java.lang.String">
        select content from c_chicken_soup
            order by rand() limit 1;
    </select>
    <select id="getContentById" resultType="java.lang.String">
        select content from c_chicken_soup
        where id = #{id}
        order by rand() limit 1;
    </select>
</mapper>